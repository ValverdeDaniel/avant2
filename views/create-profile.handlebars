<div class="main">
    <div class="container">
        <div class="card index-card">
            <form>
                <h5>User Info</h5>
                <div class="row">
                    <div class="col-lg-4">
                        <label for="about">User Name</label>
                        <!--input type="text" id="artist-name" class="form-control" placeholder="User Name"-->
                        <input type="text" id="artist-name" class="form-control artist-name-profile" value="{{login.name}}">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for="userName">Portfolio Image</label>
                        <input type="text" id="artist-avatar" class="form-control" placeholder="image link - square img" value="{{login.avatar}}">
                    </div>
                    <div class="col">
                        <label for="email">Email</label>
                        <!--input type="email" id="artist-email" class="form-control" placeholder="Appears as Contact Info"-->
                        <input type="email" id="artist-email" class="form-control artist-email-profile" value="{{login.email}}">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for="about">About</label>
                        <textarea type="text" id="artist-bio" class="form-control" placeholder="about">{{login.bio}}</textarea>
                    </div>
                </div>
                <button type="submit" id="create-profile-btn" class="btn main-search-btn form-btn">Submit</button>
            </form>
        </div>
    </div>
</div>
