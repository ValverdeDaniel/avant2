<h1 class="text-center"> {{ title }}</h1>

{{#if errors}}
    {{#each errors}}
        <div class = "alert alert-danger">
            {{this.msg}}
        </div>
    {{/each}}
{{/if}}

<div class = "container">
    <form method="POST" action="/login">
        <div class="form-group">
            <label for = "username">Username</label>
            <input type="text" name="username" class = "form-control artist-input" placeholder="Username">
        </div>
        <div class="form-group">
            <label for = "password">Password</label>
            <input type="password" name="password" class = "form-control artist-input" placeholder="password" >
        </div>
        <button type = "submit" class = "btn main-search-btn">Submit</button>
    </form>
    <div class="text-center blurb">
        <a href="/register">Create an account</a>
    </div>
</div>

